<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/detail_activity_padding"
    android:paddingRight="@dimen/detail_activity_padding"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/detail_activity_padding"
    tools:context="com.example.renubalakrishna.movie_app.DetailActivity">

    <TextView
        android:id="@+id/detail_movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        tools:text="Minions"
        android:textStyle="bold"
        android:paddingTop="@dimen/detail_activity_element_top"
        android:paddingLeft="@dimen/detail_activity_element_left"
        android:paddingRight="@dimen/detail_activity_element_right"
        android:gravity="left"/>

    <ImageView
        android:id="@+id/detail_image_poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:paddingTop="@dimen/detail_activity_element_top"
        android:paddingLeft="@dimen/detail_activity_element_left"
        android:paddingRight="@dimen/detail_activity_element_right"/>

    <TextView
        android:id="@+id/detail_movie_synopsis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        tools:text="Story here"
        android:textStyle="bold"
        android:paddingTop="@dimen/detail_activity_element_top"
        android:paddingLeft="@dimen/detail_activity_element_left"
        android:paddingRight="@dimen/detail_activity_element_right"
        android:gravity="left"/>

    <TextView
        android:id="@+id/detail_user_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        tools:text="5"
        android:textStyle="bold"
        android:paddingTop="@dimen/detail_activity_element_top"
        android:paddingLeft="@dimen/detail_activity_element_left"
        android:paddingRight="@dimen/detail_activity_element_right"
        android:gravity="left"/>

    <TextView
        android:id="@+id/detail_release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        tools:text="5"
        android:textStyle="bold"
        android:paddingTop="@dimen/detail_activity_element_top"
        android:paddingLeft="@dimen/detail_activity_element_left"
        android:paddingRight="@dimen/detail_activity_element_right"
        android:gravity="left"/>

</LinearLayout>

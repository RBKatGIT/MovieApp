<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/detail_activity_padding"
        android:paddingLeft="@dimen/detail_activity_padding"
        android:paddingRight="@dimen/detail_activity_padding"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.renubalakrishna.movie_app.DetailActivity">

        <TextView
            android:id="@+id/detail_movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingLeft="@dimen/detail_activity_element_left"
            android:paddingStart="@dimen/detail_activity_element_left"
            android:paddingRight="@dimen/detail_activity_element_right"
            android:paddingEnd="@dimen/detail_activity_element_right"
            android:paddingTop="@dimen/detail_activity_element_top"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="Minions" />

        <ImageView
            android:id="@+id/detail_image_poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/detail_image_desc"
            android:paddingLeft="@dimen/detail_activity_element_left"
            android:paddingStart="@dimen/detail_activity_element_left"
            android:paddingRight="@dimen/detail_activity_element_right"
            android:paddingEnd="@dimen/detail_activity_element_right"
            android:paddingTop="@dimen/detail_activity_element_top"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/detail_movie_synopsis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingLeft="@dimen/detail_activity_element_left"
            android:paddingStart="@dimen/detail_activity_element_left"
            android:paddingRight="@dimen/detail_activity_element_right"
            android:paddingEnd="@dimen/detail_activity_element_right"
            android:paddingTop="@dimen/detail_activity_element_top"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="Story here" />

        <TextView
            android:id="@+id/detail_user_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingLeft="@dimen/detail_activity_element_left"
            android:paddingStart="@dimen/detail_activity_element_left"
            android:paddingRight="@dimen/detail_activity_element_right"
            android:paddingEnd="@dimen/detail_activity_element_right"
            android:paddingTop="@dimen/detail_activity_element_top"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="5" />

        <TextView
            android:id="@+id/detail_release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingLeft="@dimen/detail_activity_element_left"
            android:paddingStart="@dimen/detail_activity_element_left"
            android:paddingRight="@dimen/detail_activity_element_right"
            android:paddingEnd="@dimen/detail_activity_element_right"
            android:paddingTop="@dimen/detail_activity_element_top"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="5" />

    </LinearLayout>
</ScrollView>
